{
  "name": "myretail-client",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "start": "webpack-dev-server --open -d --mode development --config config/webpack.config.dev.js",
    "build:dev": "webpack --mode development --config config/webpack.config.dev.js",
    "build:prd": "webpack --mode production --config config/webpack.config.prd.js",
    "updateSnapshots": "jest --updateSnapshot",
    "test": "jest ./",
    "e2e": "npm run build:dev && wdio"
  },
  "dependencies": {
    "dayjs": "^1.7.7",
    "immer": "^1.7.4",
    "maybe-baby": "^1.1.6",
    "prop-types": "^15.6.2",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-redux": "^5.1.0",
    "redux": "^4.0.1",
    "redux-promise-middleware": "^5.1.1",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "styled-components": "^4.0.3"
  },
  "devDependencies": {
    "@babel/core": "^7.1.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.4",
    "babel-plugin-styled-components": "^1.8.0",
    "clean-webpack-plugin": "^0.1.19",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "file-loader": "^2.0.0",
    "html-webpack-plugin": "^3.2.0",
    "html-webpack-template": "^6.2.0",
    "jasmine": "^3.3.0",
    "jest": "^23.6.0",
    "prettier": "^1.14.3",
    "react-test-renderer": "^16.6.0",
    "redux-mock-store": "^1.5.3",
    "url-loader": "^1.1.2",
    "wdio-jasmine-framework": "^0.3.7",
    "wdio-phantomjs-service": "^0.2.2",
    "wdio-selenium-standalone-service": "0.0.10",
    "webdriverio": "^4.14.0",
    "webpack": "^4.23.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.10",
    "webpack-merge": "^4.1.4",
    "why-did-you-update": "^0.2.0"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/test-scripts/enzymeConfig.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "^~root/(.*)": "<rootDir>/src/$1",
      "^~images/(.*)": "<rootDir>/../public/images/$1",
      "^~common/(.*)": "<rootDir>/src/common/$1"
    },
    "moduleDirectories": [
      "node_modules"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  },
  "browserslist": "> 0.25%, not dead"
}
